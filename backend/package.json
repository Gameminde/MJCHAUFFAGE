{
  "name": "mj-chauffage-backend",
  "version": "1.0.0",
  "description": "Backend API for MJ CHAUFFAGE e-commerce platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npm run build && npm run start:compiled",
    "build": "tsc && tsc-alias",
    "start": "ts-node -r tsconfig-paths/register src/server.ts",
    "start:compiled": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "db:migrate": "npx prisma migrate dev",
    "db:reset": "npx prisma migrate reset",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "db:test": "tsx scripts/test-database.ts",
    "docs": "swagger-jsdoc -d swaggerDef.js -o swagger.json src/routes/*.ts",
    "security:audit": "ts-node -r tsconfig-paths/register src/scripts/security-audit.ts",
    "security:pentest": "ts-node -r tsconfig-paths/register src/scripts/penetration-test.ts",
    "security:test": "ts-node -r tsconfig-paths/register src/scripts/run-security-tests.ts",
    "security:test:ci": "npm run security:test -- --ci",
    "analytics:run": "tsx scripts/run-analytics.ts",
    "inventory:run": "tsx scripts/run-inventory.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "@prisma/client": "^6.16.3",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.17.3",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.8.1",
    "isomorphic-dompurify": "^2.28.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.6",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^6.16.3",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "stripe": "^14.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "validator": "^13.12.0",
    "winston": "^3.11.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.5",
    "@types/compression": "^1.7.4",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.15",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.20",
    "@types/express-session": "^1.17.9",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.7",
    "@types/multer": "^1.4.9",
    "@types/node": "^20.8.0",
    "@types/nodemailer": "^7.0.1",
    "@types/passport": "^1.0.14",
    "@types/passport-jwt": "^3.0.11",
    "@types/passport-local": "^1.0.36",
    "@types/supertest": "^2.0.15",
    "@types/swagger-jsdoc": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.5",
    "@types/uuid": "^9.0.8",
    "@types/validator": "^13.15.3",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "dotenv": "^17.2.2",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
