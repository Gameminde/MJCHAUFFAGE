# ===================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION - FRONTEND
# IMPORTANT: Never commit actual secrets to version control
# Variables prefixed with NEXT_PUBLIC_ are exposed to the client
# ===================================================================

# -------------------------------------
# Environment
# -------------------------------------
NODE_ENV=production

# -------------------------------------
# NextAuth Configuration (Production)
# -------------------------------------
# Production URL of your application
NEXTAUTH_URL="https://mjchauffage.com"

# Strong secret for NextAuth (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="GENERATE_STRONG_NEXTAUTH_SECRET_HERE"

# Cookie password for iron-session (32 characters)
SECRET_COOKIE_PASSWORD="GENERATE_32_CHAR_COOKIE_PASSWORD"

# -------------------------------------
# API Configuration (Production)
# -------------------------------------
# Production API URL
NEXT_PUBLIC_API_URL="https://api.mjchauffage.com"

# WebSocket URL for real-time features
NEXT_PUBLIC_WS_URL="wss://api.mjchauffage.com"

# -------------------------------------
# Payment Configuration (Production)
# -------------------------------------
# Stripe production public key (safe to expose)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY="pk_live_YOUR_PRODUCTION_STRIPE_PUBLIC_KEY"

# -------------------------------------
# Google Services (Production)
# -------------------------------------
# Google OAuth (server-side only, not exposed to client)
GOOGLE_CLIENT_ID="PRODUCTION_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_SECRET="PRODUCTION_GOOGLE_CLIENT_SECRET"

# Google Maps API key (exposed to client)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="PRODUCTION_GOOGLE_MAPS_API_KEY"

# Google Analytics (exposed to client)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"

# -------------------------------------
# CDN and Assets (Production)
# -------------------------------------
# CDN URL for static assets
NEXT_PUBLIC_CDN_URL="https://cdn.mjchauffage.com"

# Image optimization service
NEXT_PUBLIC_IMAGE_DOMAIN="images.mjchauffage.com"

# -------------------------------------
# Feature Flags (Production)
# -------------------------------------
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# -------------------------------------
# Performance Configuration
# -------------------------------------
# Bundle analyzer (set to false in production)
ANALYZE=false

# Compression
NEXT_PUBLIC_COMPRESSION_ENABLED=true

# -------------------------------------
# Security Configuration
# -------------------------------------
# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED=true

# HSTS (HTTP Strict Transport Security)
NEXT_PUBLIC_HSTS_MAX_AGE=31536000

# -------------------------------------
# Monitoring and Error Tracking
# -------------------------------------
# Sentry for error tracking (exposed to client)
NEXT_PUBLIC_SENTRY_DSN="https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID"

# Performance monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# -------------------------------------
# Social Media and SEO
# -------------------------------------
NEXT_PUBLIC_SITE_NAME="MJ CHAUFFAGE"
NEXT_PUBLIC_SITE_DESCRIPTION="Solutions de chauffage professionnelles en Algérie"
NEXT_PUBLIC_SITE_URL="https://mjchauffage.com"
NEXT_PUBLIC_SITE_LOGO="https://cdn.mjchauffage.com/logo.png"

# Social media
NEXT_PUBLIC_FACEBOOK_PAGE="https://facebook.com/mjchauffage"
NEXT_PUBLIC_INSTAGRAM_PAGE="https://instagram.com/mjchauffage"
NEXT_PUBLIC_LINKEDIN_PAGE="https://linkedin.com/company/mjchauffage"

# -------------------------------------
# Localization
# -------------------------------------
NEXT_PUBLIC_DEFAULT_LOCALE="fr"
NEXT_PUBLIC_SUPPORTED_LOCALES="fr,ar,en"

# -------------------------------------
# Contact Information
# -------------------------------------
NEXT_PUBLIC_CONTACT_EMAIL="contact@mjchauffage.com"
NEXT_PUBLIC_CONTACT_PHONE="+213 XXX XXX XXX"
NEXT_PUBLIC_CONTACT_ADDRESS="Alger, Algérie"

# -------------------------------------
# Business Hours
# -------------------------------------
NEXT_PUBLIC_BUSINESS_HOURS_WEEKDAYS="08:00-18:00"
NEXT_PUBLIC_BUSINESS_HOURS_SATURDAY="08:00-14:00"
NEXT_PUBLIC_BUSINESS_HOURS_SUNDAY="closed"

# -------------------------------------
# Cache Configuration
# -------------------------------------
NEXT_PUBLIC_CACHE_PRODUCTS_TTL=300
NEXT_PUBLIC_CACHE_CATEGORIES_TTL=1800
NEXT_PUBLIC_CACHE_STATIC_TTL=86400