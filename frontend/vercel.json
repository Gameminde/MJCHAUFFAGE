{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "src/pages/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://mj-chauffage-backend-production.up.railway.app/api/:path*"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
