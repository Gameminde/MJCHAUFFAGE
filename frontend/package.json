{
    "name": "mj-chauffage-frontend",
    "version": "1.0.0",
    "description": "Frontend application for MJ CHAUFFAGE e-commerce platform",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "dev:turbo": "next dev --turbo",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "type-check": "tsc --noEmit",
        "typecheck": "npm run type-check",
        "test": "vitest",
        "test:watch": "vitest --watch",
        "test:coverage": "vitest --run --coverage",
        "test:unit": "vitest run src/**/*.{test,spec}.{ts,tsx} --coverage",
        "test:components": "vitest run src/components/**/*.{test,spec}.{ts,tsx} --coverage",
        "test:hooks": "vitest run src/hooks/**/*.{test,spec}.{ts,tsx} --coverage",
        "test:services": "vitest run src/services/**/*.{test,spec}.{ts,tsx} --coverage",
        "test:utils": "vitest run src/lib/**/*.{test,spec}.{ts,tsx} src/utils/**/*.{test,spec}.{ts,tsx} --coverage",
        "test:legacy": "jest",
        "test:legacy:watch": "jest --watch",
        "test:legacy:coverage": "jest --coverage",
        "analyze": "ANALYZE=true next build",
        "analyze:bundle": "npm run build && npx @next/bundle-analyzer",
        "performance:audit": "lighthouse http://localhost:3000 --output=json --output-path=./performance-audit.json",
        "performance:test": "npm run build && npm run start & sleep 10 && npm run performance:audit && pkill -f 'next start'",
        "mobile:audit": "node scripts/audit-mobile.js",
        "mobile:audit:dev": "BASE_URL=http://localhost:3000 npm run mobile:audit",
        "mobile:test-4g": "node scripts/test-4g.js",
        "mobile:perf-test": "npm run mobile:test-4g & sleep 5 && BASE_URL=http://localhost:3001 npm run mobile:audit:dev && pkill -f 'test-4g.js'",
        "test:integration": "vitest run tests/integration",
        "test:integration:watch": "vitest tests/integration",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug",
        "test:integration:full": "tsx tests/run-integration-tests.ts",
        "test:all": "npm run test && npm run test:integration && npm run test:e2e",
        "mcp:list": "node scripts/figma-mcp-tools.mjs",
        "mcp:call": "node scripts/figma-mcp-tools.mjs --tool %TOOL% --args %ARGS%"
    },
    "dependencies": {
        "@formatjs/intl-localematcher": "^0.5.4",
        "@headlessui/react": "^1.7.17",
        "@heroicons/react": "^2.0.18",
        "@hookform/resolvers": "^3.3.2",
        "@stripe/stripe-js": "^2.1.11",
        "@supabase/ssr": "^0.7.0",
        "@supabase/supabase-js": "^2.84.0",
        "@types/uuid": "^10.0.0",
        "aos": "^2.3.4",
        "axios": "^1.6.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "critters": "^0.0.23",
        "date-fns": "^2.30.0",
        "framer-motion": "^12.23.24",
        "lucide-react": "^0.294.0",
        "negotiator": "^0.6.3",
        "next": "^14.0.0",
        "next-auth": "^4.24.13",
        "next-intl": "^4.3.12",
        "node-fetch": "^3.3.2",
        "react": "^18.2.0",
        "react-datepicker": "^4.25.0",
        "react-dom": "^18.2.0",
        "react-dropzone": "^14.2.3",
        "react-hook-form": "^7.47.0",
        "react-hot-toast": "^2.4.1",
        "react-query": "^3.39.3",
        "react-select": "^5.8.0",
        "recharts": "^2.8.0",
        "sharp": "^0.32.6",
        "socket.io-client": "^4.8.1",
        "stripe": "^14.7.0",
        "tailwind-merge": "^2.6.0",
        "tailwindcss": "^3.3.5",
        "uuid": "^13.0.0",
        "zod": "^3.22.4",
        "zustand": "^4.4.7"
    },
    "devDependencies": {
        "@modelcontextprotocol/sdk": "^1.20.1",
        "@netlify/plugin-nextjs": "^5.14.7",
        "@next/bundle-analyzer": "^15.5.4",
        "@playwright/test": "^1.55.1",
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.18",
        "@testing-library/jest-dom": "^6.1.4",
        "@testing-library/react": "^13.4.0",
        "@types/aos": "^3.0.7",
        "@types/negotiator": "^0.6.4",
        "@types/node": "^20.8.0",
        "@types/pg": "^8.15.6",
        "@types/react": "^18.2.31",
        "@types/react-datepicker": "^4.19.2",
        "@types/react-dom": "^18.2.14",
        "@typescript-eslint/eslint-plugin": "^6.7.5",
        "@typescript-eslint/parser": "^6.7.5",
        "@vitest/coverage-v8": "^3.2.4",
        "autoprefixer": "^10.4.16",
        "eslint": "^8.51.0",
        "eslint-config-next": "^14.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "pg": "^8.16.3",
        "playwright": "^1.55.1",
        "postcss": "^8.4.31",
        "prettier": "^3.0.3",
        "prettier-plugin-tailwindcss": "^0.5.6",
        "supertest": "^6.3.3",
        "tsx": "^4.6.2",
        "typescript": "^5.2.2",
        "vitest": "^3.2.4",
        "webpack-bundle-analyzer": "^4.10.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "unimported": {
        "ignorePaths": [
            "src/app/**/page.tsx",
            "src/app/**/layout.tsx",
            "src/app/**/error.tsx",
            "src/app/**/not-found.tsx",
            "src/app/**/loading.tsx",
            "src/middleware.ts",
            "tests/**",
            "__tests__/**",
            "**/*.test.ts",
            "**/*.test.tsx",
            "**/*.spec.ts",
            "playwright.config.ts",
            "jest.config.*",
            "next.config.js"
        ]
    }
}
