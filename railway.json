{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && npm run build",
    "postBuildCommand": "cd backend && npx prisma migrate deploy && npx prisma db seed"
  },
  "deploy": {
    "startCommand": "cd backend && npm run start:compiled",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
