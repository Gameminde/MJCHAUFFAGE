# Environment Variables for Production Deployment

# Database Configuration
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/mjchauffage_prod

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# JWT Secrets (Generate secure random strings)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_REFRESH_SECRET=your_refresh_secret_here_minimum_32_characters

# Session Secret
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@mjchauffage.dz

# Encryption Key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here_exactly_32_chars

# Algeria Post Dahabia Integration
DAHABIA_API_URL=https://api.algerieposte.dz
DAHABIA_MERCHANT_ID=your_merchant_id
DAHABIA_SECRET_KEY=your_dahabia_secret_key

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.mjchauffage.dz
NEXT_PUBLIC_SITE_URL=https://mjchauffage.dz

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GEMINI_API_KEY=your_gemini_api_key_here

# File Upload (if using cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=mjchauffage-uploads
AWS_REGION=eu-west-1

# Production Flags
NODE_ENV=production
ENABLE_HTTPS=true
ENABLE_RATE_LIMITING=true

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://mjchauffage.dz

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Algeria-specific Configuration
DEFAULT_LOCALE=ar
SUPPORTED_LOCALES=ar,fr
DEFAULT_CURRENCY=DZD
FREE_SHIPPING_THRESHOLD=50000

# Business Configuration
BUSINESS_NAME=MJ CHAUFFAGE
BUSINESS_EMAIL=contact@mjchauffage.dz
BUSINESS_PHONE=+213XXXXXXXXX
BUSINESS_ADDRESS=Alger, Algeria

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_RETENTION_DAYS=30